= form_for @<%= singular_name %> do |f|
  -if @<%= singular_name %>.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@<%= singular_name %>.errors.count, "error")} #{t('.prohibited_this_<%= singular_name %>_from_being_saved')}:"
      %ul
        - @<%= singular_name %>.errors.full_messages.each do |msg|
          %li= msg

<% for attribute in attributes -%>
  .clear
  .field
    = f.label :<%= attribute.name %>, t('.<%= attribute.name %>')
    = f.<%= attribute.field_type %> :<%= attribute.name %>
<% end -%>
    .clear
  .actions
    = f.submit nil, :class => 'submit_button', :disable_with => t('please_wait')
