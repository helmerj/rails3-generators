= render 'shared/dataTable'
%h1= t '.title'
%p= link_to t('.new_<%= singular_name %>'), new_<%= singular_name %>_path


%table.no_javascript
  %thead
    %tr
  <% for attribute in attributes -%>
    %th= t('<%= attribute.name %>')
  <% end -%>
    %th{:colspan => 3}= t 'actions'
  %tbody
    - @<%= plural_name %>.each do |<%= singular_name %>|
      %tr
<% for attribute in attributes -%>
        %td= <%= singular_name %>.<%= attribute.name %>
<% end -%>
        %td= link_to t('show'), <%= singular_name %>
        %td= link_to t('edit'), edit_<%= singular_name %>_path(<%= singular_name %>)
        %td= link_to t('destroy'), <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete
